<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="zvikabh.rccarcontroller.WelcomeActivity" >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="25dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Choose how to connect to the RC Car Receiver:" />
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:gravity="center" >

        <Button
            android:id="@+id/buttonProxy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Connect through Proxy" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="25dp"
        android:text="Use this option to connect to the receiver through an RC Car Proxy. This is useful if you are behind a NAT and thus unreachable from the receiver." />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center" >

        <Button
            android:id="@+id/buttonDirect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Direct Connection" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Use this option to connect directly to the receiver through an RC Car Proxy. This is useful if you and the receiver are behind the same NAT, or if you are connected directly to the Internet." />

</LinearLayout>